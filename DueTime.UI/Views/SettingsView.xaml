<UserControl x:Class="DueTime.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DueTime.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Application Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- License Information -->
            <GroupBox Header="License Information" Padding="10" Margin="0,0,0,20" AutomationProperties.Name="License Information Section">
                <StackPanel>
                    <TextBlock x:Name="TrialStatusText" Margin="0,0,0,10" FontWeight="Bold"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBox x:Name="LicenseKeyTextBox" Width="200" Margin="0,0,10,0" 
                                 AutomationProperties.Name="License Key"
                                 AutomationProperties.HelpText="Enter your license key to activate premium features"
                                 KeyDown="LicenseKeyTextBox_KeyDown"/>
                        <Button Content="_Activate License" Click="ActivateLicense_Click" 
                                AutomationProperties.Name="Activate License Button"
                                AutomationProperties.HelpText="Activate your license key"/>
                    </StackPanel>
                    
                    <TextBlock Text="Enter a valid license key to unlock premium features permanently." 
                               TextWrapping="Wrap" FontStyle="Italic" Margin="0,5,0,0"/>
                    
                    <!-- Debug-only button is included in code-behind with #if DEBUG -->
                </StackPanel>
            </GroupBox>
            
            <!-- General Settings -->
            <GroupBox Header="General Settings" Padding="10" Margin="0,0,0,20" AutomationProperties.Name="General Settings Section">
                <StackPanel>
                    <CheckBox x:Name="StartupCheckBox" Content="_Run on startup" 
                              Checked="StartupCheckBox_Changed" Unchecked="StartupCheckBox_Changed" 
                              Margin="0,5"
                              AutomationProperties.HelpText="When enabled, DueTime will start automatically when you log in to Windows"/>
                    <CheckBox x:Name="DarkModeCheckBox" Content="Enable _dark mode" 
                              Margin="0,5"
                              AutomationProperties.HelpText="Changes the application theme to dark colors"/>
                </StackPanel>
            </GroupBox>
            
            <!-- AI Features -->
            <GroupBox Header="AI Features" Padding="10" Margin="0,0,0,20" AutomationProperties.Name="AI Features Section">
                <StackPanel>
                    <TextBlock Text="Enable AI-powered features for smarter time tracking and automatic project categorization. Your data remains private and is only shared with OpenAI when you enable this feature." 
                               TextWrapping="Wrap" Margin="0,0,0,10"/>
                    
                    <CheckBox x:Name="EnableAICheckBox" Content="Enable _AI features (requires OpenAI API key)" 
                              Margin="0,5,0,10"
                              AutomationProperties.HelpText="Enables AI-powered automatic project categorization and summary generation"/>
                    
                    <Grid IsEnabled="{Binding ElementName=EnableAICheckBox, Path=IsChecked}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="OpenAI API Key:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <PasswordBox x:Name="ApiKeyPasswordBox" Grid.Column="1" Grid.Row="0" PasswordChar="â€¢" Margin="0,0,10,0"
                                     AutomationProperties.Name="OpenAI API Key"
                                     AutomationProperties.HelpText="Enter your OpenAI API key to enable AI features"
                                     KeyDown="ApiKeyPasswordBox_KeyDown"/>
                        <Button Content="_Save Key" Click="SaveApiKey_Click" Grid.Column="2" Grid.Row="0"
                                AutomationProperties.HelpText="Save your OpenAI API key securely"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                                   Text="Your API key is stored securely and is only used for authorized API calls." 
                                   FontStyle="Italic" FontSize="11" Margin="0,5,0,0"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
            
            <!-- Data Management -->
            <GroupBox Header="Data Management" Padding="10" AutomationProperties.Name="Data Management Section">
                <StackPanel>
                    <TextBlock Text="Backup and restore application data to/from a file. Backup includes all tracked time, projects, and rules." 
                               TextWrapping="Wrap" Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="_Backup Data" Click="BackupButton_Click"
                                AutomationProperties.HelpText="Save all your data to a backup file"/>
                        <Button Content="_Restore Data" Click="RestoreButton_Click" Margin="10,0,0,0"
                                AutomationProperties.HelpText="Restore your data from a backup file"/>
                    </StackPanel>
                    
                    <TextBlock Text="Clear all data (all tracked time entries, projects and rules will be permanently deleted)" 
                               TextWrapping="Wrap" Margin="0,20,0,5" Foreground="#CC0000"/>
                    <Button Content="Clear _All Data" Click="ClearData_Click" 
                            Background="#FFE0E0" Foreground="#CC0000" 
                            BorderBrush="#CC0000" FontWeight="Bold" 
                            HorizontalAlignment="Left" Padding="10,5"
                            AutomationProperties.Name="Clear All Data Button"
                            AutomationProperties.HelpText="WARNING: This will permanently delete all your data"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl> 