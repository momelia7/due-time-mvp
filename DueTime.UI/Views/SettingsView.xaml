<UserControl x:Class="DueTime.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DueTime.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Application Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- General Settings -->
            <GroupBox Header="General Settings" Padding="10" Margin="0,0,0,20">
                <StackPanel>
                    <CheckBox Content="Run on Startup" IsChecked="{Binding Source={x:Static local:AppState.RunOnStartup}}" Margin="0,5"/>
                    <CheckBox Content="Enable Dark Mode" IsChecked="{Binding Source={x:Static local:AppState.EnableDarkMode}}" Margin="0,5"/>
                </StackPanel>
            </GroupBox>
            
            <!-- Data Management -->
            <GroupBox Header="Data Management" Padding="10">
                <StackPanel>
                    <TextBlock Text="Backup and restore application data to/from a file. Backup includes all tracked time, projects, and rules." 
                               TextWrapping="Wrap" Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Backup Data" Click="BackupButton_Click"/>
                        <Button Content="Restore Data" Click="RestoreButton_Click" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl> 