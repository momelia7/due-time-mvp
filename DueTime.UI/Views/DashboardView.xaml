<UserControl x:Class="DueTime.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DueTime.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Today's Tracked Time" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding Date, StringFormat='d MMMM yyyy'}" FontStyle="Italic" Margin="0,0,0,10"/>
        </StackPanel>
        
        <!-- Time Entries Grid -->
        <DataGrid x:Name="EntriesDataGrid" Grid.Row="1" Margin="10" 
                  AutoGenerateColumns="False" IsReadOnly="False"
                  ItemsSource="{Binding Source={x:Static local:AppState.Entries}}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime, StringFormat='HH:mm:ss'}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="End Time" Binding="{Binding EndTime, StringFormat='HH:mm:ss'}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Window Title" Binding="{Binding WindowTitle}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Application" Binding="{Binding ApplicationName}" Width="120" IsReadOnly="True"/>
                <DataGridComboBoxColumn x:Name="ProjectColumn" Header="Project" Width="150"
                                       SelectedValueBinding="{Binding ProjectId, Mode=TwoWay}"
                                       DisplayMemberPath="Name"
                                       SelectedValuePath="ProjectId">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding Source={x:Static local:AppState.Projects}}"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding Source={x:Static local:AppState.Projects}}"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Weekly Summary Button -->
        <Button Grid.Row="2" Content="Generate Weekly Summary" 
                HorizontalAlignment="Right" Margin="10,10,10,15" 
                Padding="10,5" Click="WeeklySummary_Click"/>
    </Grid>
</UserControl> 