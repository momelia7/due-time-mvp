<Window x:Class="DueTime.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DueTime.UI"
        xmlns:views="clr-namespace:DueTime.UI.Views"
        mc:Ignorable="d"
        Title="DueTime - Time Tracking" 
        Height="600" Width="900"
        MinHeight="450" MinWidth="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0" AutomationProperties.Name="Main Navigation">
            <TabItem Header="_Dashboard" AutomationProperties.Name="Dashboard Tab">
                <views:DashboardView />
            </TabItem>
            <TabItem Header="_Projects" AutomationProperties.Name="Projects Tab">
                <views:ProjectsView />
            </TabItem>
            <TabItem Header="_Settings" AutomationProperties.Name="Settings Tab">
                <views:SettingsView />
            </TabItem>
        </TabControl>
        
        <StatusBar Grid.Row="1" Height="24">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar x:Name="StatusProgress" Width="100" Height="16" Visibility="Collapsed" IsIndeterminate="True" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
